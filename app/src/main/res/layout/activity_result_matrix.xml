<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context=".results.ResultMatrix">

    <TextView
        android:id="@+id/dettxt"
        android:layout_width="170dp"
        android:layout_height="27dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="12dp"
        android:gravity="start"
        android:text="The Determinant :"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/det"
        app:layout_constraintStart_toStartOf="parent" />

    <ru.noties.jlatexmath.JLatexMathView
        android:id="@+id/inv"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:background="@drawable/custom_mathview"
        android:backgroundTint="#70ffffff"
        android:padding="16dip"
        android:paddingStart="8sp"
        android:paddingEnd="8sp"
        android:scrollIndicators="right"
        android:scrollbarSize="15sp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="horizontal"
        app:jlmv_alignHorizontal="start"
        app:jlmv_textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rank" />

    <TextView
        android:id="@+id/invtxt"
        android:layout_width="170dp"
        android:layout_height="27dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="12dp"
        android:gravity="start"
        android:text="The Inverse:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/inv"
        app:layout_constraintStart_toStartOf="parent" />

    <ru.noties.jlatexmath.JLatexMathView
        android:id="@+id/det"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/custom_mathview"
        android:backgroundTint="#70ffffff"
        android:padding="16dip"
        android:paddingStart="8sp"
        android:paddingEnd="8sp"
        android:scrollIndicators="right"
        android:scrollbarSize="15sp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="horizontal"
        app:jlmv_alignHorizontal="start"
        app:jlmv_textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rank" />

    <TextView
        android:id="@+id/titlematres"
        android:layout_width="342dp"
        android:layout_height="78dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Matrix Operations"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/hresmat"

        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="111dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:text="Home"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:icon="@drawable/ic_baseline_home_24"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="2sp"></com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bresmat"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="111dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:icon="@drawable/ic_baseline_arrow_back_24"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hresmat"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="2sp"></com.google.android.material.button.MaterialButton>

    <ru.noties.jlatexmath.JLatexMathView
        android:id="@+id/rank"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/custom_mathview"
        android:backgroundTint="#70ffffff"
        android:padding="16dip"
        android:paddingStart="8sp"
        android:paddingEnd="8sp"
        android:scrollIndicators="right"
        android:scrollbarSize="15sp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="horizontal"
        app:jlmv_alignHorizontal="start"
        app:jlmv_textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlematres" />

    <TextView
        android:id="@+id/ranktxt"

        android:layout_width="170dp"
        android:layout_height="37dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="12dp"
        android:gravity="start"
        android:text="The Rank :"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rank"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>