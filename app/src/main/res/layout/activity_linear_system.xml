<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back1"
    tools:context="interfaces.linear_system">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/gensys"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
        android:layout_width="144dp"
        android:layout_height="64dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:text="Generate"
        android:textAllCaps="false"
        android:textColor="@color/black"


        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#bababa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlesys"></com.google.android.material.button.MaterialButton>

    <MultiAutoCompleteTextView
        android:id="@+id/colsys"
        android:layout_width="145dp"
        android:layout_height="59dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="240dp"
        android:background="@drawable/custom_edittext"
        android:hint="Variables x,y,z"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/subsys"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
        android:layout_width="169dp"
        android:layout_height="60dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:text="   Solve ! "
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#bababa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        ></com.google.android.material.button.MaterialButton>

    <TextView
        android:id="@+id/titlesys"
        android:layout_width="342dp"
        android:layout_height="78dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="Linear System "
        android:textColor="@color/black"

        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/homesys"

        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="111dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:text="Home"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:icon="@drawable/ic_baseline_home_24"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="2sp"></com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backsys"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="111dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:icon="@drawable/ic_baseline_arrow_back_24"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/homesys"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="2sp"></com.google.android.material.button.MaterialButton>


    <TableLayout
        android:id="@+id/matsys"
        android:layout_width="404dp"
        android:layout_height="350dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/subsys"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/colsys"
        app:layout_constraintVertical_bias="0.765">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <EditText
                android:layout_width="280dp"
                android:layout_height="55dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/custom_edittext"
                android:hint="x1 + 2*x2 + 3*x3"
                android:paddingLeft="15dp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="="
                android:textSize="24dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/custom_edittext"
                android:gravity="center"
                android:paddingLeft="5dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <EditText
                android:layout_width="280dp"
                android:layout_height="55dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/custom_edittext"
                android:hint="x1 + 2*x2 + 3*x3"
                android:paddingLeft="15dp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="="
                android:textSize="24dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/custom_edittext"
                android:gravity="center"
                android:paddingLeft="5dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <EditText
                android:layout_width="280dp"
                android:layout_height="55dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/custom_edittext"
                android:hint="x1 + 2*x2 + 3*x3"
                android:paddingLeft="15dp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="="
                android:textSize="24dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/custom_edittext"
                android:gravity="center"
                android:paddingLeft="5dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <EditText
                android:layout_width="280dp"
                android:layout_height="55dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/custom_edittext"
                android:hint="x1 + 2*x2 + 3*x3"
                android:paddingLeft="15dp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="="
                android:textSize="24dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/custom_edittext"
                android:gravity="center"
                android:paddingLeft="5dp" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <EditText
                android:layout_width="280dp"
                android:layout_height="55dp"
                android:hint="x1 + 2*x2 + 3*x3"
                android:background="@drawable/custom_edittext"
                android:paddingLeft="15dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:text="="
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="24dp"/>
            <EditText
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:background="@drawable/custom_edittext"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:layout_marginBottom="4dp"
                />

        </TableRow>

    </TableLayout>

    <EditText
        android:id="@+id/rowsys"
        android:layout_width="145dp"
        android:layout_height="59dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/custom_edittext"
        android:hint="number of equations"

        android:paddingLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>